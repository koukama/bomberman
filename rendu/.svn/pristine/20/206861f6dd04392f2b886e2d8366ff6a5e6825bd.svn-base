CC	:= gcc -g

RM	:= rm -rf

SRCS	:= main.c\
	init_game.c\
	gere_keyboard.c\
	gere_gameplay.c\
	gere_display.c\
	gere_intro.c\
	load_map.c\
	linked_list.c\
	my_put_nbr.c\
	my_string.c\

OBJS	:= $(SRCS:.c=.o)

CFLAGS	:= -Werror -Wall -g

LDFLAGS	:= -lSDL2 -lSDL2_image -lSDL2_mixer -lSDL2_ttf

NAME	:= Bomberman

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) -o $(NAME) $(OBJS) $(CFLAGS) $(LDFLAGS)

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all re clean fclean
